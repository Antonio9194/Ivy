<div class="container my-5">
  <h1 class="text-center mb-4">Records</h1>

  <div class="row justify-content-center">
    <% @records.each do |record| %>
      <div class="col-md-6 mb-4">
        <div class="card shadow-sm border-0 rounded-4">
          <div class="card-body">
            <h5 class="card-title fw-bold"><%= record.title %></h5>
            <p class="card-text text-muted"><%= record.description %></p>
            <p class="text-end text-secondary mb-0" style="font-size: 0.85rem;">
              Created at: <%= record.created_at.strftime("%b %d, %Y %I:%M %p") %>
            </p>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
<div class="chat-container d-flex flex-column" style="height: calc(100vh - 150px); width: 90%; max-width: 450px; margin: 0 auto;">
  <h1 class="text-center mb-4">ðŸŒ¿ Ivy Calendar</h1>

  <div class="card shadow-lg border-0 rounded-4" style="margin-top: 80px;">
    <div class="card-body p-4">
      <%= month_calendar(events: @calendar_events, attribute: :start_time, end_attribute: :end_time) do |date, events| %>
  <div class="day-cell p-2 rounded-3 <%= 'bg-light text-muted' if date.month != Date.today.month %> <%= 'has-events' if events.any? %>">
    <strong><%= date.day %></strong>

    <% events.each do |event| %>
      <div class="event-pill mt-1">
        <%= link_to @calendar_events.count, calendar_event_path(event), class: "text-decoration-none", style: "color: black;" %>
      </div>
    <% end %>
  </div>
<% end %>
    </div>
  </div>
</div>


<div class="ivy-container d-flex flex-column" style="height: calc(100vh - 150px); width: 90%; max-width: 400px; margin: 0 auto;">
  <!-- Logo / Name -->
  <div class="card shadow-lg border-0 d-flex flex-row justify-content-center align-items-center p-2"
     style="border: 1px solid black; border-radius: 20px; background-color: white; margin-top: 40px">
    <%= image_tag "ivy.png", style: "width: 30px; height: 30px; margin-right: 15px;" %>
    <h1 class="mb-0" style="font-size: 1.45rem; font-weight: 600;">I am Ivy</h1>
  </div>
  <!-- Auth panel -->
  <div class="signup-auth-panel" style="margin-top: 50%;">
    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= f.error_notification %>
      <div class="form-group mb-3">
        <%= f.input_field :name, required: true, autofocus: true, placeholder: "Name", class: "form-control auth-input", autocomplete: "name", style: "border-radius: 20px;" %>
      </div>
      <div class="form-group mb-3">
        <%= f.input_field :email, required: true, placeholder: "Email", class: "form-control auth-input", autocomplete: "email", style: "border-radius: 20px;" %>
      </div>
      <div class="form-group mb-3">
        <%= f.input_field :password, required: true, placeholder: "Password", class: "form-control auth-input", autocomplete: "new-password", style: "border-radius: 20px;" %>
        <% if @minimum_password_length %>
          <small class="form-text" style="color: white;"><%= @minimum_password_length %> characters minimum</small>
        <% end %>
      </div>
      <div class="form-group mb-3">
        <%= f.input_field :password_confirmation, required: true, placeholder: "Confirm Password", class: "form-control auth-input", autocomplete: "new-password", style: "border-radius: 20px;" %>
      </div>
      <%= f.button :submit, "Sign up", class: "auth-submit w-100", style: "border: 1px solid black; border-radius: 20px; background-color: #1c1c1c; color: white;" %>
    <% end %>
  </div>
</div>
